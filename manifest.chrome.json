{
  "manifest_version": 3,
  "name": "Altered - Collection Extractor",
  "version": "5.6",
  "description": "Extract your cards collection from Altered TCG website, using the official API, in the following format: Quantity ID.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "worker.js"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://*.altered.gg/*"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{df474bb2-92a7-470e-8194-ce02948aa945}",
      "strict_min_version": "109.0"
    }
  }
}
